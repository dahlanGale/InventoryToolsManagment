<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/light_background"
    android:padding="8dp">

    <!-- SKU -->
    <TextView
        android:id="@+id/skuTxt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="SKU"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/descripcionTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Descripción"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/stockTotalTxt"
        app:layout_constraintStart_toEndOf="@+id/skuTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Stock Total -->
    <TextView
        android:id="@+id/stockTotalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Stock: 0"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cantidad Contada (Editable) -->
    <EditText
        android:id="@+id/ctdContadaEdit"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/skuTxt"
        app:layout_constraintTop_toBottomOf="@+id/skuTxt" />

    <!-- Botón para fijar cantidad de stock -->
    <Button
        android:id="@+id/btnSetStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Fijar"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockTotalTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>